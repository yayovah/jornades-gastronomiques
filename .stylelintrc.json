{
  "extends": ["stylelint-config-recommended-scss"],
  "plugins": ["stylelint-order"],
  "rules": {
    "selector-class-pattern": ["^(o|c|u)-[a-z0-9\\-]+$",
    {
      "message": "Amb la metodologia ITCSS, les classe han de comen√ßar per o-, c-, o u-"
    }
    ],
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "max-nesting-depth": 2,
    "selector-max-id": 0,
    "length-zero-no-unit": true,
     "rule-empty-line-before": [
      "always",
      {
        "except": ["first-nested"],
        "ignore": ["after-comment"]
      }
    ]
 }
}